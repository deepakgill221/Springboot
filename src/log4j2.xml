<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="60">

<!-- Server Configuration -->

	<Properties>
		     <Property name="log-path">/mount_log/maxservice</Property> 
		  <!--  <Property name="log-path">C:\\LOGS</Property> -->
	</Properties>
	<Appenders>
		<RollingFile name="RollingFile-Appender" fileName="${log-path}/chatbotapi.log"
			filePattern="${log-path}/maxservice_%d{yyyy-MM-dd-hh-mm}.log">
			<PatternLayout
				pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %x %c{1} - %msg%n" />
			<Policies>
				<SizeBasedTriggeringPolicy size="10MB" />
			</Policies>
		</RollingFile>
	</Appenders>

	<Loggers>
		<Logger name="org.springframework.web" level="info" additivity="false">
			<AppenderRef ref="RollingFile-Appender" />
		</Logger>
		<Logger name="org.hibernate" level="info" additivity="false">
			<AppenderRef ref="RollingFile-Appender" />
		</Logger>
		<Logger name="com.qc" level="info" additivity="false">
			<AppenderRef ref="RollingFile-Appender" />
		</Logger>
		<Root>
			<AppenderRef ref="RollingFile-Appender" />
		</Root>
	</Loggers>



